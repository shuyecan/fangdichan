<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >

    <include layout="@layout/mytooler">
    </include>
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/activity_body_padding"
        android:paddingRight="@dimen/activity_body_padding" >

        <EditText
            android:id="@+id/reg_phone"
            style="@style/loginEditStyle"
            android:hint="请输入手机号"
            android:inputType="phone"
            android:maxLength="11"
            android:maxLines="1" >
            <requestFocus />
        </EditText>

        <TextView
            style="@style/loginEditText"
            android:text="手机号" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_marginTop="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/activity_body_padding"
        android:paddingRight="@dimen/activity_body_padding" >

        <EditText
            android:id="@+id/reg_pwd"
            style="@style/loginEditStyle"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:maxLength="11"
            android:maxLines="1" >
        </EditText>

        <TextView
            style="@style/loginEditText"
            android:text="密码" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/activity_body_padding"
        android:paddingRight="@dimen/activity_body_padding" >

        <EditText
            android:id="@+id/reg_name"
            style="@style/loginEditStyle"
            android:hint="请输入昵称"
            android:inputType="text"
            android:maxLength="11"
            android:maxLines="1" >
        </EditText>

        <TextView
            style="@style/loginEditText"
            android:text="昵称" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/activity_body_padding"
        android:paddingRight="@dimen/activity_body_padding" >

        <EditText
            android:id="@+id/reg_year"
            style="@style/loginEditStyle"
            android:hint="请输入年龄"
            android:inputType="number"
            android:maxLength="11"
            android:maxLines="1" >
        </EditText>

        <TextView
            style="@style/loginEditText"
            android:text="年龄" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/activity_body_padding"
        android:paddingRight="@dimen/activity_body_padding" >

        <EditText
            android:id="@+id/reg_qq"
            style="@style/loginEditStyle"
            android:hint="请输入QQ"
            android:inputType="number"
            android:maxLength="11"
            android:maxLines="1" >

        </EditText>

        <TextView
            style="@style/loginEditText"
            android:text="QQ" />
    </RelativeLayout>


    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/login_passlay"
        android:layout_marginLeft="@dimen/activity_body_padding"
        android:layout_marginRight="@dimen/activity_body_padding"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_login_color"
        android:text="注册"
        android:textColor="@android:color/white"
        android:textSize="18sp" />
</LinearLayout>