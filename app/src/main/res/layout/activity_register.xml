<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >

    <include layout="@layout/mytooler">
    </include>
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/activity_body_padding"
        android:paddingRight="@dimen/activity_body_padding" >

        <EditText
            android:id="@+id/reg_userName"
            style="@style/loginEditStyle"
            android:hint="请输入用户名"
            android:maxLength="11"
            android:maxLines="1" >
            <requestFocus />
        </EditText>

        <TextView
            style="@style/loginEditText"
            android:text="用户名" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/activity_body_padding"
        android:paddingRight="@dimen/activity_body_padding" >

        <EditText
            android:id="@+id/reg_Pwd"
            style="@style/loginEditStyle"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:maxLength="11"
            android:maxLines="1" >
        </EditText>

        <TextView
            style="@style/loginEditText"
            android:text="密码" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/activity_body_padding"
        android:paddingRight="@dimen/activity_body_padding" >

        <EditText
            android:id="@+id/reg_Name"
            style="@style/loginEditStyle"
            android:hint="请输入真实姓名"
            android:inputType="text"
            android:maxLength="11"
            android:maxLines="1" >
        </EditText>

        <TextView
            style="@style/loginEditText"
            android:text="真实姓名" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/activity_body_padding"
        android:paddingRight="@dimen/activity_body_padding" >

        <EditText
            android:id="@+id/reg_Sex"
            style="@style/loginEditStyle"
            android:hint="请输入性别（男|女）"
            android:maxLength="11"
            android:maxLines="1" >
        </EditText>

        <TextView
            style="@style/loginEditText"
            android:text="性别" />
    </RelativeLayout>


    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/login_passlay"
        android:layout_marginLeft="@dimen/activity_body_padding"
        android:layout_marginRight="@dimen/activity_body_padding"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_login_color"
        android:text="注册"
        android:textColor="@android:color/white"
        android:textSize="18sp" />
</LinearLayout>